<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.fragments.SupportFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:text="For any Inquiries, info or support\n contact us or leave a message"/>

            <LinearLayout
                android:id="@+id/lvCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/ivCall"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_circle"
                    android:src="@drawable/phone_white"
                    android:padding="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="9988998899"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/ivEmail"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_circle"
                    android:src="@drawable/mail_white"
                    android:padding="18dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="abc@gmail.com"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/ivMessage"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_circle"
                    android:src="@drawable/message_white"
                    android:padding="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="9988998899"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>